SRC= src/benchmark.c src/test.c src/mss.c src/winternitz.c src/hash.c src/aes_128.c src/util.c
#SRC+=src/TI_aes_128_encr_only.c #src/TI_aes_128_encr_only.c src/ti_aes.c src/TI_aes_128.c
ASRC=src/avr-asm-macros.S src/aes_sbox-asm.S src/aes_keyschedule-asm.S src/aes_enc-asm.S
ASFLAGS=
OBJ=$(SRC:.c=.o) $(ASRC:.S=.o)
OUT=lib/libhashsigs.a
INCLUDES= -I. -Iinclude
LDFLAGS=-g
.SUFFIXES: .c
CC=avr-gcc
CFLAGS=-std=c99 -Os -Wall -pedantic -I include -mmcu=atmega128
#CFLAGS += -DMSS_HEIGHT=10 -DMSS_K=8 -DWINTERNITZ_W=2
CFLAGS += -DPLATFORM_SENSOR -DPLATFORM_AVR
#CFLAGS += -DAES_ENC_DEC #AES in C with decryption function (ti_aes.c)
CFLAGS += -DAES_ASM
CFLAGS += -DMSS_ROM_RETAIN
#CFLAGS += -DVERBOSE
AR=avr-ar
ALL_ASFLAGS=-mmcu=atmega128 -I. -x assembler-with-cpp $(ASFLAGS)
default: $(OUT)
.c.o:
	$(CC) $(INCLUDES) $(CFLAGS) -c $< -o $@
%.o : %.S
	$(CC) -c $(ALL_ASFLAGS) $< -o $@ 
$(OUT): $(OBJ)
	$(AR) rcs $(OUT) $(OBJ)
 
clean:
	rm -f $(OBJ) $(OUT) Makefile.bak
